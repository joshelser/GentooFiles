" detect the type of a file
filetype on

" load filetype plugins
filetype plugin on

" load indent files for specific filetypes
filetype indent on


" set color
colorscheme koehler

" syntax highlighting
syntax on


" make a backup file
set backup

" place to store backups
set backupdir=~/.vim_backups

" directory is the directory for temp file
set directory=/tmp


set autoindent
set smartindent

set cindent

set tabstop=4
set softtabstop=4
set shiftwidth=4

set noexpandtab
